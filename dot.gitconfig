[color]
    ui = true

[alias]
    st = status -bs
    co = checkout
    ci = commit
    b = branch -avv
    topush = log --branches="*" --oneline --not --remotes
    lg = log --graph --oneline --decorate=short
    please = push --force-with-lease
    superpull = !git fetch -p && git pull
[core]
    excludesfile = ~/.gitignore_global

[push]
    default = current

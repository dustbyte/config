#!/bin/sh

usage() {
    echo "git_change_email old_email new_email"
    exit 255
}

[ $# -lt 2 ] && usage

OLD_EMAIL=$1
NEW_EMAIL=$2

git filter-branch -f --commit-filter "
if [ \"\$GIT_COMMITTER_EMAIL\" = \"$OLD_EMAIL\" ];
then
    GIT_COMMITTER_EMAIL=$NEW_EMAIL;
    GIT_AUTHOR_EMAIL=$NEW_EMAIL;
fi
    git commit-tree "\$@";
" HEAD
